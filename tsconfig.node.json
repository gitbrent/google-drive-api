{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Brent (via ChatGPT): add support for GAPI types */
    "typeRoots": ["node_modules/@types"],
    "types": ["gapi", "gapi.auth2", "gapi.client.drive"]
  },
  "include": ["vite.config.ts"]
}
